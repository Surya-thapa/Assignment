@model List<Assignment.Models.Domain.Employee>
@{
}
<section>
    <h1>Employee</h1>
    <div class="Add_button_emp">
        <a asp-controller="Employees" asp-action="AddEmployee">Create New</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th hidden>Id</th>
                <th>SN</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>DateOfBirth</th>
                <th>Department</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var employee in Model)
            {

                <tr>
                    <td hidden>@employee.Id</td>
                    <td>@(i += 1)</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td>
                        <a href="Employees/Update/@employee.Id">Edit</a>
                        &nbsp;&nbsp; <a href="Employees/Delete/@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
