@model Assignment.Models.Domain.AddDepartment


<section class="form-container">
    <h1>Add Department</h1>
    <form method="POST" action="AddDepartment" class="mt-5">
        <input type="hidden" class="form-control" asp-for="Id">
        <div class="row mb-3">
            <div class="col-sm-4">
                <label for="" class="form-label">Department Name</label>
                <input type="text" class="form-control" asp-for="DepartmentName">
            </div>
            <div class="col-sm-4">
                <label for="" class="form-label">DepartmentPhone No.</label>
                <input type="number" class="form-control" asp-for="DepartmentPhone">
            </div>
            <div class="col-sm-4">
                <label for="" class="form-label">Department Description</label>
                <input type="text" class="form-control" asp-for="DepartmentDescription">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</section>
